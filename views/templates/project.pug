    .o-grid
      .o-grid__cell--width-15
      .o-grid__cell.page-meta
        p.date
          =meta.updated
      .o-grid__cell--width-35.o-grid--bottom.o-grid--right
        .nav
          a.help(href='/help')
            button(alt='Help') &#63;
          a.share(href='/discuss')
            button Share & discuss
      .o-grid__cell--width-15

    .gallery

    .o-grid
      .o-grid__cell--width-15
      .o-grid__cell
        rg-pagination
      .o-grid__cell--width-15

    .o-grid
      .o-grid__cell--width-20
      .o-grid__cell.page-content
        !=content
      .o-grid__cell--width-20


