doctype html
html
  head
    meta(charset='utf-8')
    title=meta.title

    link(rel='icon' href='static/favicon.ico')
    link(rel='manifest' href='static/manifest.json')
    script(src='/vendor/zepto-1.2.0.min.js')
    script(src='/vendor/modernizr-3.5.0.min.js')
    script(src='/vendor/riot+compiler.min.js')
    script(src='/vendor/riotgear.min.js')
    link(href='/vendor/blaze-1.1.3.min.css' rel='stylesheet')
    link(href='/vendor/blaze/blaze.min.css' rel='stylesheet')
    link(href='/styles/custom.css' rel='stylesheet')

    link(href='/vendor/gallery.prefixed.css' rel='stylesheet')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto:100,100italic,200,200italic,300,300italic,400,400italic,500,500italic,600,600italic,700,700italic,800,800italic,900,900italic')
    script(src='https://api.tiles.mapbox.com/mapbox-gl-js/v0.44.0/mapbox-gl.js')
    link(href='https://api.tiles.mapbox.com/mapbox-gl-js/v0.44.0/mapbox-gl.css' rel='stylesheet')
    script project_id=#{meta.id}; project_path='/uploads';

    script(src='/scripts/main.js')
  body
    rg-drawer
    site-header
      .o-page-header.o-container.o-container--large
        .c-link.c-link--brand
          a.logo(href='/') SmartUse

    .o-grid
      .o-grid__cell--width-15
        .c-link-author
          a(href=author.url)
            img(src=author.logo)
      .o-grid__cell.page-meta
      .o-grid__cell--width-15

    .gallery

    .o-grid
      .o-grid__cell--width-15
      .o-grid__cell
        rg-pagination
      .o-grid__cell--width-15

    .o-grid
      .o-grid__cell--width-20
      .o-grid__cell
        h1
          =meta.title
        p.date
          =meta.updated
        p.description
          =meta.summary
      .o-grid__cell--width-20

    .o-grid
      .o-grid__cell--width-20
      .o-grid__cell--width-7.authorImage
        img(src=author.gravatar)
      .o-grid__cell.authorText
        a.fullname(href=author.url,target="_blank")
          =author.fullname
        .organisation
          =author.organisation
      .o-grid__cell--width-20

    .o-grid
      .o-grid__cell--width-20
      .o-grid__cell.page-content
        !=content
      .o-grid__cell--width-20
