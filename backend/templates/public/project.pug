extends public/base.pug

block head
  script project_id=#{meta.id}; project_path='/uploads';

block subheader
  .o-grid.author-header
    .o-grid__cell--width-15
      .c-link-author
        a(href=author.organisation.url)
          img(src=author.organisation.logo,title=author.organisation.name)
    .o-grid__cell.page-meta
    .o-grid__cell--width-15

block content
  .gallery

  .o-grid
    .o-grid__cell--width-15
    .o-grid__cell
      rg-pagination
    .o-grid__cell--width-15

  .o-grid
    .o-grid__cell--width-20
    .o-grid__cell
      p.date
        =meta.updated
      p.description
        =meta.summary
    .o-grid__cell--width-20

  .o-grid(data-sticky-container)
    .o-grid__cell--width-10
    .o-grid__cell--width-10.sidebar-nav.sticky(data-margin-top="20",data-sticky-for="1023",data-sticky-class="is-sticky")
      h3
        =meta.title
      ul
    .o-grid__cell.page-scroll
      .o-grid
        .o-grid__cell--width-7.authorImage
          img(src=author.gravatar)
        .o-grid__cell.authorText
          a.fullname(href=author.url,target="_blank")
            =author.fullname
          .organisation
            =author.organisation.name

      .page-content
        !=content
      .resource-content

    .o-grid__cell--width-20
