extends public/base.pug

block scripts
  script(src='/scripts/front.js')
  script(src='/vendor/glider.js')

block head
  link(href='/vendor/glider.min.css',rel='stylesheet')
  //link(href='/vendor/gallery.prefixed.css',rel='stylesheet')

block content
  .container
    .row
      .col-md-12.center
        .glider-contain#featured
        //
          .dots
          a.glider-prev «
          a.glider-next »

  .container.padding-top.padding-bottom
    .row
      .col-md-12
        .text.section#welcome
          = headline

  //
    .container-fluid.bg-secondary#about
      .container.padding-top.padding-bottom
        .row
          .col-md-12
            br
            .text.section
              = about

  .container.padding-top
    .row
      .col-md-12.center
        form(action='/search')
          i.icon.fa.fa-search
          input.form-control.form-control-lg.search(name='q',placeholder='Suchen ...')

  .container#home-projects
    .row.padding-top
      .col-md-12
        h1 Case Studies
    .row(project-category='case-study')
    .row.padding-top
      .col-md-12.text-center
        a.btn.btn-lg.btn-secondary(href='/labs') Weitere Projekte ...

  .container-fluid.bg-primary.no-padding.home-content
    img.img-fluid.w-100(src='/img/SmartUse_header.jpg' alt='SmartUse Header')
    .container
      .row
        .col-md-12.text
          = about
          center
            a.btn.btn-lg.btn-secondary(href='/about') Weiter lesen ...
