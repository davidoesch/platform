extends public/base.pug

block scripts
  script(src='/scripts/front.js')
  script(src='/vendor/glider.js')

block head
  link(href='/vendor/glider.min.css',rel='stylesheet')
  //link(href='/vendor/gallery.prefixed.css',rel='stylesheet')

block content
  .container
    .row
      .col-md-12.center
        .glider-contain#featured
        //
          .dots
          a.glider-prev «
          a.glider-next »

  .container.padding-top.padding-bottom
    .row
      .col-md-12
        .text.section#welcome
          = headline

  //
    .container-fluid.bg-secondary#about
      .container.padding-top.padding-bottom
        .row
          .col-md-12
            br
            .text.section
              = about

  .container.padding-top
    .row
      .col-md-12.center
        form(action='/search')
          input.form-control.form-control-lg.search(name='q',placeholder='Search ...')

  .container#home-projects
    .row.padding-top
      .col-md-12
        h1 Case Studies
    .row(project-category='case-study')
    .row.padding-top
      .col-md-12
        h1 Labs
    .row(project-category='labs')

  .container-fluid.bg-primary.home-content
    .container
      .row
        .col-md-12.text
          = about

  .container-fluid.home-content
    .container
      .row
        .col-md-12.text#bottom
          = bottom|safe
