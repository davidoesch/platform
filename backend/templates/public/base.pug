//- base template
doctype html
html
  head
    meta(charset='utf-8')
    title=meta.title

    link(rel='icon' href='static/favicon.ico')
    link(rel='manifest' href='static/manifest.json')
    script(src='/vendor/zepto-1.2.0.min.js')
    script(src='/vendor/modernizr-3.5.0.min.js')
    script(src='/vendor/riot+compiler.min.js')
    script(src='/vendor/riotgear.min.js')
    link(href='/vendor/blaze-1.1.3.min.css',rel='stylesheet')
    link(href='/vendor/blaze/blaze.min.css',rel='stylesheet')

    link(href='/vendor/gallery.prefixed.css',rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Roboto:100,100italic,200,200italic,300,300italic,400,400italic,500,500italic,600,600italic,700,700italic,800,800italic,900,900italic',rel='stylesheet')
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons',rel='stylesheet')
    script(src='https://api.tiles.mapbox.com/mapbox-gl-js/v0.44.0/mapbox-gl.js')
    link(href='https://api.tiles.mapbox.com/mapbox-gl-js/v0.44.0/mapbox-gl.css',rel='stylesheet')

    link(rel="apple-touch-icon-precomposed",href="/img/apple-touch-iphone.png")
    link(rel="apple-touch-icon-precomposed",sizes="72x72",href="/img/apple-touch-ipad.png")
    link(rel="apple-touch-icon-precomposed",sizes="114x114",href="/img/apple-touch-iphone4.png")
    link(rel="apple-touch-icon-precomposed",sizes="144x144",href="/img/apple-touch-ipad-retina.png")

    block head
      //- additional scripts and styles

    link(href='/styles/custom.css',rel='stylesheet')
    script(src='/scripts/util.js')
    script(src='/scripts/main.js')

  body
    block top
      .o-page-header.o-container.o-container--large
        .c-link.c-link--brand
          a.logo(href='/') SmartUse

    block content
      //- main page content

    block footer
      .o-grid.footer-primary
        .o-grid__cell.o-grid__cell--width-20
        .o-grid__cell.newsletter
          p Immer auf dem Laufenden bleiben? Einfach für unseren Newsletter anmelden:
          form(method='post', data-name='Immer auf dem Laufenden bleiben? Einfach für unseren Newsletter anmelden:')
            .form-fields
              p
                input(name='EMAIL', placeholder='E-Mail-Adresse', required='', style='background-image: url("data:image/png;base64,"); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;', type='email')
                input(name='FNAME', placeholder='Vorname', type='text')
                input(name='LNAME', placeholder='Nachname', type='text')
        .o-grid__cell.o-grid__cell--width-20
      .o-grid.footer-secondary
        .o-grid__cell.o-grid__cell--width-20
        .o-grid__cell
          .footer-logos
            a.footer-logo(href='https://smartuse.ch/')
              img(src='/img/SmartUse-Logo.png', alt='SmartUse')
            .supporters
              h6 Mit Ünterstutzung von
              a(href='http://metropolitanraum-zuerich.ch/', rel='external')
                img(src='/img/logo_MK_white.png', alt='Metropolitanraum Zürich')
          .footer-info
            p
              a(href='/terms-of-use/') Terms of use
              |
              a(href='/privacy-policy/') Privacy policy
            ul.footer-links
              li
                a(href='https://gitter.im/smartuse/chat', rel='external')
                  svg
                    use(xlink:href='#icon-gitter')
                  span.text Chat
              li
                a(href='https://gitlab.com/smartuse', rel='external')
                  svg
                    use(xlink:href='#icon-github')
                  span.text GitLab
        .o-grid__cell.o-grid__cell--width-20
      .o-grid.footer-tertiary
        .o-grid__cell.o-grid__cell--width-20
        .o-grid__cell
          .c-input-group
            a.c-button.c-button--success(href='/') Home
            a.c-button.c-button--info(href='mailto:info@smartuse.ch') Send feedback
            a.c-button.c-button--brand(href='https://smartuse.ch/') SmartUse ARGE
            a.c-button(href='/admin/') Administration
          p
            span &nbsp; &copy; 2018 &nbsp;
            a(href='https://www.metropolitanraum-zuerich.ch/home.html') Metropolitanraum Zürich
        .o-grid__cell.o-grid__cell--width-20
